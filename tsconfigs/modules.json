{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "../dist/modules/",
    "rootDir": "../src"
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../**/*.spec.ts"
  ]
}
